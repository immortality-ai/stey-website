---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Contact — Stey">
  <Header />

  <main class="pt-24">
    <section class="section-padding">
      <div class="container-narrow">
        <div class="text-center mb-16">
          <p class="text-ember text-sm tracking-[0.3em] uppercase mb-4">Contact</p>
          <h1 class="heading-lg mb-6">We'd love to hear from you.</h1>
          <p class="body-lg max-w-xl mx-auto">
            Questions, feedback, partnership inquiries — we read every message.
          </p>
        </div>

        <div class="grid md:grid-cols-2 gap-12">
          <!-- Contact Form -->
          <div>
            <form class="space-y-6" action="https://formspree.io/f/your-form-id" method="POST">
              <div>
                <label for="name" class="block text-sm text-parchment-muted mb-2">Name</label>
                <input
                  type="text"
                  id="name"
                  name="name"
                  required
                  class="w-full bg-void-50 border border-void-200 px-4 py-3 text-parchment placeholder-parchment-dark focus:border-ember focus:outline-none transition-colors"
                  placeholder="Your name"
                />
              </div>

              <div>
                <label for="email" class="block text-sm text-parchment-muted mb-2">Email</label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  required
                  class="w-full bg-void-50 border border-void-200 px-4 py-3 text-parchment placeholder-parchment-dark focus:border-ember focus:outline-none transition-colors"
                  placeholder="you@example.com"
                />
              </div>

              <div>
                <label for="subject" class="block text-sm text-parchment-muted mb-2">Subject</label>
                <select
                  id="subject"
                  name="subject"
                  class="w-full bg-void-50 border border-void-200 px-4 py-3 text-parchment focus:border-ember focus:outline-none transition-colors"
                >
                  <option value="general">General Inquiry</option>
                  <option value="support">Support</option>
                  <option value="feedback">Feedback</option>
                  <option value="partnership">Partnership</option>
                  <option value="press">Press</option>
                </select>
              </div>

              <div>
                <label for="message" class="block text-sm text-parchment-muted mb-2">Message</label>
                <textarea
                  id="message"
                  name="message"
                  rows="5"
                  required
                  class="w-full bg-void-50 border border-void-200 px-4 py-3 text-parchment placeholder-parchment-dark focus:border-ember focus:outline-none transition-colors resize-none"
                  placeholder="How can we help?"
                ></textarea>
              </div>

              <button
                type="submit"
                class="w-full bg-parchment text-void py-4 font-medium hover:bg-ember transition-colors"
              >
                Send Message
              </button>
            </form>
          </div>

          <!-- Contact Info -->
          <div class="space-y-8">
            <div>
              <h3 class="font-serif text-xl mb-4">Email Us</h3>
              <div class="space-y-3">
                <p class="body-md">
                  <span class="text-parchment-muted">General:</span>
                  <a href="mailto:hello@stey.app" class="text-ember hover:underline ml-2">hello@stey.app</a>
                </p>
                <p class="body-md">
                  <span class="text-parchment-muted">Support:</span>
                  <a href="mailto:support@stey.app" class="text-ember hover:underline ml-2">support@stey.app</a>
                </p>
                <p class="body-md">
                  <span class="text-parchment-muted">Press:</span>
                  <a href="mailto:press@stey.app" class="text-ember hover:underline ml-2">press@stey.app</a>
                </p>
              </div>
            </div>

            <div class="divider"></div>

            <div>
              <h3 class="font-serif text-xl mb-4">Response Time</h3>
              <p class="body-md text-parchment-muted">
                We typically respond within 24-48 hours. For urgent support issues, please include "URGENT" in your subject line.
              </p>
            </div>

            <div class="divider"></div>

            <div>
              <h3 class="font-serif text-xl mb-4">Social</h3>
              <div class="flex gap-4">
                <a href="https://twitter.com/steyapp" target="_blank" rel="noopener" class="w-10 h-10 rounded-full border border-void-200 flex items-center justify-center hover:border-ember transition-colors group">
                  <svg class="w-5 h-5 text-parchment-muted group-hover:text-ember transition-colors" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
                  </svg>
                </a>
                <a href="https://instagram.com/steyapp" target="_blank" rel="noopener" class="w-10 h-10 rounded-full border border-void-200 flex items-center justify-center hover:border-ember transition-colors group">
                  <svg class="w-5 h-5 text-parchment-muted group-hover:text-ember transition-colors" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                  </svg>
                </a>
              </div>
            </div>

            <div class="divider"></div>

            <div class="bg-void-50 p-6 border border-void-200">
              <h3 class="font-serif text-lg mb-3">Looking for press materials?</h3>
              <p class="body-sm text-parchment-muted mb-4">
                Download logos, screenshots, and brand assets from our press kit.
              </p>
              <a href="/press" class="text-ember hover:underline text-sm">View Press Kit →</a>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>
