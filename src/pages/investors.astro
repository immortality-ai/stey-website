    <!-- Slide 9: Target Markets -->
    <section class="slide">
      <div class="slide-content">
        <p class="text-ember text-sm tracking-[0.3em] uppercase mb-6">Target Markets</p>
        <h2 class="text-4xl sm:text-5xl lg:text-6xl font-serif mb-16 max-w-4xl">
          Moments that demand preservation.
        </h2>
        <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-6 max-w-6xl">
