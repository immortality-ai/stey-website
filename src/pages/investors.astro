    .slide-content {
      @apply w-full max-w-7xl mx-auto;
    }

    .nav-dot {
      @apply w-2 h-2 rounded-full bg-parchment/30 transition-all duration-300;
    }

    .nav-dot:hover {
      @apply bg-parchment/60;
    }

    .nav-dot.active {
      @apply bg-ember h-6;
    }

    .nav-arrow {
      @apply w-12 h-12 rounded-full border border-parchment/30 flex items-center justify-center;
      @apply text-parchment hover:border-ember hover:text-ember transition-all duration-300;
    }

    .nav-arrow:hover {
      @apply bg-ember/10;
    }

    .nav-arrow.opacity-0 {
      @apply pointer-events-none;
    }
  </style>

  <script>
    const main = document.querySelector('main');
    const dots = document.querySelectorAll('.nav-dot');
    const slides = document.querySelectorAll('.slide');
    const prevBtn = document.getElementById('prev-btn');
    const nextBtn = document.getElementById('next-btn');
    const counter = document.getElementById('slide-counter');
    const totalSlides = slides.length;
    let currentSlide = 0;

    function updateUI(slideIndex: number) {
      currentSlide = slideIndex;

      // Update dots
      dots.forEach((dot, index) => {
        dot.classList.toggle('active', index === slideIndex);
      });

      // Update counter
      if (counter) {
        counter.textContent = `${slideIndex + 1} / ${totalSlides}`;
      }

      // Update arrow visibility
      if (prevBtn) {
        prevBtn.classList.toggle('opacity-0', slideIndex === 0);
      }
      if (nextBtn) {
        nextBtn.classList.toggle('opacity-0', slideIndex === totalSlides - 1);
      }
    }

    function goToSlide(index: number) {
      if (index >= 0 && index < totalSlides) {
        slides[index]?.scrollIntoView({ behavior: 'smooth' });
      }
    }

    // Update on scroll
    if (main && slides.length) {
      main.addEventListener('scroll', () => {
        const scrollPos = main.scrollTop;
        const windowHeight = window.innerHeight;
        const slideIndex = Math.round(scrollPos / windowHeight);
        updateUI(slideIndex);
      });
    }

    // Dot navigation
    dots.forEach((dot) => {
      dot.addEventListener('click', () => {
        const slideIndex = parseInt(dot.getAttribute('data-slide') || '0');
        goToSlide(slideIndex);
      });
    });

    // Arrow navigation
    prevBtn?.addEventListener('click', () => goToSlide(currentSlide - 1));
    nextBtn?.addEventListener('click', () => goToSlide(currentSlide + 1));

    // Keyboard navigation
    document.addEventListener('keydown', (e) => {
      if (e.key === 'ArrowUp' || e.key === 'ArrowLeft') {
        e.preventDefault();
        goToSlide(currentSlide - 1);
      } else if (e.key === 'ArrowDown' || e.key === 'ArrowRight' || e.key === ' ') {
        e.preventDefault();
        goToSlide(currentSlide + 1);
      }
    });
  </script>
