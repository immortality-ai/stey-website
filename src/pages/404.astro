---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Page Not Found — Stey">
  <Header />

  <main class="pt-24">
    <section class="min-h-[60vh] flex items-center justify-center">
      <div class="container-narrow text-center">
        <p class="text-8xl font-serif text-ember mb-6">404</p>
        <h1 class="heading-md mb-4">This memory doesn't exist.</h1>
        <p class="body-lg text-parchment-muted mb-8">
          The page you're looking for has been lost to time — or never existed at all.
        </p>

        <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
          <a href="/" class="inline-flex items-center gap-2 bg-parchment text-void px-6 py-3 font-medium hover:bg-ember transition-colors">
            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
            </svg>
            Go Home
          </a>
          <a href="/contact" class="text-parchment-muted hover:text-parchment transition-colors">
            Contact Support
          </a>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>
