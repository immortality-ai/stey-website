---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';

// Sample blog posts (would be replaced with CMS/MDX content)
const posts = [
  {
    slug: 'why-voice-memories-matter',
    title: 'Why Voice Memories Matter More Than Photos',
    excerpt: 'In an age of infinite photos, the sound of a loved one\'s voice becomes the rarest treasure.',
    date: 'December 20, 2025',
    category: 'Perspective',
    readTime: '4 min read',
  },
  {
    slug: 'getting-started-first-memory',
    title: 'Getting Started: Recording Your First Memory',
    excerpt: 'A simple guide to capturing your first voice memory with Stey.',
    date: 'December 18, 2025',
    category: 'Guide',
    readTime: '3 min read',
  },
  {
    slug: 'privacy-by-design',
    title: 'Privacy by Design: Why We Process Everything On-Device',
    excerpt: 'The technical and ethical reasons behind our commitment to local-first architecture.',
    date: 'December 15, 2025',
    category: 'Technology',
    readTime: '6 min read',
  },
  {
    slug: 'prompts-for-grandparents',
    title: '50 Prompts to Help Grandparents Share Their Stories',
    excerpt: 'A curated list of questions to unlock decades of memories and wisdom.',
    date: 'December 12, 2025',
    category: 'Resources',
    readTime: '5 min read',
  },
  {
    slug: 'digital-legacy-planning',
    title: 'Digital Legacy Planning: Beyond Passwords and Accounts',
    excerpt: 'Why preserving your voice and memories is the most meaningful digital legacy.',
    date: 'December 8, 2025',
    category: 'Perspective',
    readTime: '5 min read',
  },
];

const categories = ['All', 'Perspective', 'Guide', 'Technology', 'Resources'];
---

<Layout title="Blog — Stey">
  <Header />

  <main class="pt-24">
    <!-- Hero -->
    <section class="section-padding">
      <div class="container-wide">
        <div class="max-w-2xl">
          <p class="text-ember text-sm tracking-[0.3em] uppercase mb-4">Blog</p>
          <h1 class="heading-lg mb-6">Stories about preserving stories.</h1>
          <p class="body-lg text-parchment-muted">
            Thoughts on memory, legacy, privacy, and the technology that helps us hold on to what matters.
          </p>
        </div>
      </div>
    </section>

    <!-- Categories -->
    <section class="border-b border-void-200">
      <div class="container-wide">
        <div class="flex gap-6 overflow-x-auto pb-4 -mb-px">
          {categories.map((category, i) => (
            <button
              class={`text-sm whitespace-nowrap pb-4 border-b-2 transition-colors ${
                i === 0
                  ? 'text-ember border-ember'
                  : 'text-parchment-muted border-transparent hover:text-parchment'
              }`}
            >
              {category}
            </button>
          ))}
        </div>
      </div>
    </section>

    <!-- Posts Grid -->
    <section class="section-padding">
      <div class="container-wide">
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {posts.map((post) => (
            <article class="group">
              <a href={`/blog/${post.slug}`} class="block">
                <div class="aspect-[16/10] bg-void-50 mb-6 border border-void-200 group-hover:border-ember/30 transition-colors overflow-hidden">
                  <div class="w-full h-full flex items-center justify-center">
                    <svg class="w-12 h-12 text-void-200" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
                    </svg>
                  </div>
                </div>

                <div class="flex items-center gap-3 mb-3">
                  <span class="text-xs text-ember uppercase tracking-wider">{post.category}</span>
                  <span class="text-parchment-dark">·</span>
                  <span class="text-xs text-parchment-dark">{post.readTime}</span>
                </div>

                <h2 class="text-xl font-serif mb-3 group-hover:text-ember transition-colors">
                  {post.title}
                </h2>

                <p class="body-md text-parchment-muted mb-4">
                  {post.excerpt}
                </p>

                <p class="text-sm text-parchment-dark">{post.date}</p>
              </a>
            </article>
          ))}
        </div>

        <!-- Load More -->
        <div class="text-center mt-16">
          <button class="px-8 py-3 border border-void-200 text-parchment-muted hover:border-ember hover:text-parchment transition-colors">
            Load More Articles
          </button>
        </div>
      </div>
    </section>

    <!-- Newsletter -->
    <section class="section-padding bg-void-50">
      <div class="container-narrow text-center">
        <h2 class="heading-md mb-4">Stay updated</h2>
        <p class="body-lg text-parchment-muted mb-8">
          Get notified about new articles and app updates. No spam, ever.
        </p>

        <form class="flex flex-col sm:flex-row gap-4 max-w-md mx-auto">
          <input
            type="email"
            placeholder="your@email.com"
            class="flex-1 bg-void border border-void-200 px-4 py-3 text-parchment placeholder-parchment-dark focus:border-ember focus:outline-none"
          />
          <button type="submit" class="bg-parchment text-void px-6 py-3 font-medium hover:bg-ember transition-colors">
            Subscribe
          </button>
        </form>
      </div>
    </section>
  </main>

  <Footer />
</Layout>
