---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Stey — Your voice. Your legacy. Forever.">
  <Header />

  <main>
    <!-- ============================================
         HERO: Emotional hook with single CTA
         ============================================ -->
    <section class="min-h-screen flex flex-col justify-center relative overflow-hidden">
      <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[1000px] h-[1000px] bg-ember/5 rounded-full blur-3xl"></div>

      <div class="container-narrow relative z-10 text-center py-32">
        <p class="text-ember text-sm tracking-[0.3em] uppercase mb-8 animate-fade-in">100% Private · On-Device AI</p>

        <h1 class="heading-xl text-parchment mb-8 animate-rise">
          One day, your voice<br/>
          <span class="text-ember italic">will be a memory.</span>
        </h1>

        <p class="text-xl sm:text-2xl text-parchment-muted max-w-2xl mx-auto mb-12 animate-rise-slow text-balance">
          Capture your stories, wisdom, and love — so those who matter most can hear you forever. All processed privately on your device.
        </p>

        <!-- App Store Badge -->
        <div class="flex flex-col sm:flex-row items-center justify-center gap-6 animate-fade-in-slow" style="animation-delay: 0.3s;">
          <a href="#download" class="inline-block transition-transform hover:scale-105" aria-label="Download on the App Store">
            <svg class="h-14" viewBox="0 0 120 40" fill="none" xmlns="http://www.w3.org/2000/svg">
              <rect width="120" height="40" rx="5" fill="#f5f0e8"/>
