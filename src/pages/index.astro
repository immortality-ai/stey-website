  // Android Waitlist Form Handler
  const form = document.getElementById('android-waitlist');
  const successMsg = document.getElementById('waitlist-success');

  form?.addEventListener('submit', async (e) => {
    e.preventDefault();
    const formData = new FormData(form as HTMLFormElement);
    const email = formData.get('email');

    // Store in localStorage for now (replace with actual API endpoint)
    const waitlist = JSON.parse(localStorage.getItem('android-waitlist') || '[]');
    waitlist.push({ email, timestamp: new Date().toISOString() });
    localStorage.setItem('android-waitlist', JSON.stringify(waitlist));

    // Show success message
    (form as HTMLFormElement).classList.add('hidden');
    successMsg?.classList.remove('hidden');
  });
